<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.letzunite.applabs.fragments.Profile1Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you donated blood in the past ?"
        android:textColor="@color/profile_font_color"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rg_past_donated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/profile_font_color"/>
        <RadioButton
            android:id="@+id/rb_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="No"
            android:textColor="@color/profile_font_color"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin_top"
        android:text="Have you had any of the following in past 6 months: "
        android:textColor="@color/profile_font_color"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/cb_vaccination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Vaccination"
        android:textColor="@color/profile_font_color">
    </CheckBox>

    <CheckBox
        android:id="@+id/cb_tatto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Tatto / Piercing"
        android:textColor="@color/profile_font_color">
    </CheckBox>

    <CheckBox
        android:id="@+id/cb_surgery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Surgery"
        android:textColor="@color/profile_font_color">
    </CheckBox>

    <CheckBox
        android:id="@+id/cb_chronic_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Chronic Disease"
        android:textColor="@color/profile_font_color">
    </CheckBox>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin_top"
        android:text="Any other medical history, you want to tell (optional)"
        android:textColor="@color/profile_font_color"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,. "
        android:maxLength="255"
        android:maxLines="5"
        android:textColor="@color/profile_font_color"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/register_nav_margin_top"
        android:background="@android:color/transparent"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/profile_font_color"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>
